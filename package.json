{
  "name": "bootstrap4-webpack2-boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "git@github.com:mihaerzen/bootstrap4-webpack2-boilerplate.git",
  "author": "Miha Er≈æen <miha.erzen1@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "npm run eslint",
    "eslint": "./node_modules/.bin/eslint .",
    "rmrf": "rm -rf dist",
    "build:dev": "npm run rmrf && webpack --env.development",
    "build:prod": "npm run rmrf && webpack -p --env.production",
    "build": "npm run build:dev",
    "serve": "webpack-dev-server --env.development --content-base dist --open --inline --hot --host localhost",
    "serve:prod": "webpack-dev-server --env.production --content-base dist --host localhost"
  },
  "dependencies": {
    "bootstrap": "4.0.0-alpha.6",
    "holderjs": "^2.9.4",
    "jquery": "^3.2.1"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.1",
    "copy-webpack-plugin": "^4.0.1",
    "css-loader": "^0.28.4",
    "eslint": "^4.1.1",
    "eslint-config-airbnb-base": "^11.2.0",
    "eslint-plugin-import": "^2.6.1",
    "extract-text-webpack-plugin": "^2.1.2",
    "file-loader": "^1.1.11",
    "font-awesome": "^4.7.0",
    "font-awesome-loader": "^1.0.2",
    "font-awesome-webpack": "0.0.5-beta.2",
    "html-webpack-plugin": "^2.29.0",
    "image-webpack-loader": "^4.2.0",
    "imagemin-webpack-plugin": "^1.5.0-beta.0",
    "img-loader": "^2.0.1",
    "less": "^3.0.1",
    "less-loader": "^4.1.0",
    "node-sass": "^4.5.3",
    "postcss-loader": "^2.0.6",
    "raw-loader": "^0.5.1",
    "reload-html-webpack-plugin": "^0.1.2",
    "sass-loader": "^6.0.6",
    "slick-carousel": "^1.8.1",
    "style-loader": "^0.18.2",
    "url-loader": "^1.0.1",
    "webpack": "^3.0.0",
    "webpack-dev-server": "^2.5.0"
  }
}
